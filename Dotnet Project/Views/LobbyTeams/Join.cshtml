@model JoinViewModel

<form asp-action="Join" method="post">


    <div class="form-group">
        <label asp-for="SelectedPlayerIds" class="control-label"></label>
        <select asp-for="SelectedPlayerIds" class="form-control" asp-items="ViewBag.AvailablePlayers" multiple="multiple" required>
        </select>
        <span asp-validation-for="SelectedPlayerIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Join Lobby</button>
</form>



@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Welcome.css" asp-append-version="true" />
</head>
<body class="d-flex">
    <div class="vh-100 bg-blue-color" style="width: 60%;display: flex;flex-direction: column;gap: 32%;color: #8ba3e7 !important">
        <h3 style="margin: 13px 24px 17px 29px;">Project Name</h3>
        <div style="margin: 13px 24px 17px 29px;">
            <h1 style="font-size: 50px;">Some title</h1>
            <p style="font-size: 30px;">Some description here Some description here Some description here</p>
        </div>
    </div>
    <div class="vh-100 bg-dark-blue-color light-color" style="width: 40%;display: flex;flex-direction: column;justify-content: center;align-items: center;">
        <div style="width: 100%;padding: 29px;display: grid;grid-template-rows: repeat(2, 1fr);grid-template-columns: repeat(2, 1fr);justify-items: center;align-items: center;">
            <h2 style="margin: 7px 29px;grid-column: span 2;">Get Started</h2>
            <button style="width: 95%;border-radius: 7px;font-size: 20px;height: 49px;background-color: var(--color1);border: 1px solid black;">
                Log in
            </button>
            <button style="width: 95%;border-radius: 7px;font-size: 20px;height: 49px;background-color: var(--color1);border: 1px solid black;">
                Sign up
            </button>
        </div>
        <div style="position: relative;top: 27%;">
            <h5 style="margin: 13px 24px 17px 29px;">Project Name</h5>
            <div>
                <a>Terms of use</a>
                <span></span>
                <a>Privacy policy</a>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Welcome.js" asp-append-version="true"></script>
</body>
</html>
